{{extend 'layout.html'}}
<h2>These are the talks you are attending.. 
    <div class="pull-right">
        <a href="{{=URL('send_mail')}}" class="btn btn-primary">Email Me</a>
        <a href="{{=URL('get_ics')}}" class="btn btn-primary" target="_blank">Get .ics</a>
    </div>
</h2><hr>
{{for talk in talks_attending:}}
    <div class="well">
            <h3>
                    <a href="{{=URL('show_talk', args=[talk.id])}}">
                        {{=talk.f_title}}
                    </a>
            </h3>
            <h4>
                    by <a href="{{=URL('show_speaker', args=[talk.f_speaker.id])}}">{{=talk.f_speaker.f_name}}</a>
            </h4>
            <h4>
                    on {{=talk.f_slot.f_date}} From {{=talk.f_slot.f_start_time}} To {{=talk.f_slot.f_stop_time}} in {{=talk.f_slot.f_room.f_name}}
            </h4>
            <h4>
                    {{=talk.count}} people attending
            </h4>
    </div>
{{pass}}
