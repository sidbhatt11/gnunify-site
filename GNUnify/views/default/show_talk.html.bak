{{extend 'layout.html'}}
<h1>
    Talk Details
</h1><hr>
<h2>
        {{=talk.f_title}}
</h2>
<h3>
        by <a href="{{=URL('show_speaker', args=[talk.f_speaker.id])}}">{{=talk.f_speaker.f_name}}</a>
</h3>
<h4>
        in {{=talk.f_category.f_category}}
</h4>
<h4>
        on {{=talk.f_slot.f_date}} From {{=talk.f_slot.f_start_time}} To {{=talk.f_slot.f_stop_time}} in {{=talk.f_slot.f_room.f_name}}
</h4>
<h4>
        {{=talk.count}} people attending
</h4><hr>
{{if auth.is_logged_in():}}
    <p>
        {{=user.name}} {{=user.str}}
    </p>
    <p>
        {{=user.altstr}}<br>
        <div class="btn-group">
            <a class="btn" href="{{=URL('action',args=[talk.id,auth.user.id,'yes'])}}">Yes</a>
            <a class="btn" href="{{=URL('action',args=[talk.id,auth.user.id,'maybe'])}}">Maybe</a>
            <a class="btn" href="{{=URL('action',args=[talk.id,auth.user.id,'no'])}}">No</a>
        </div>
    </p>
{{else:}}
<p>
    Please log in to RSVP.
</p>
{{pass}}
<hr>
<p>
    {{=talk.f_description}}
</p>
{{if talk.f_resource:}}
        <h4>
            Resources :
        </h4><hr>
        <p>
            {{=A('Download Resources', _href=URL("download", args=talk.f_resource), _class="btn btn-primary") or ""}}
        </p>
{{pass}}
